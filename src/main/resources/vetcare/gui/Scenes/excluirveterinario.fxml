<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="vetcare.gui.controllers.ExcluirVeterinarioController"
      alignment="CENTER" spacing="15" style="-fx-padding: 20;">

    <Label fx:id="mensagemLabel" wrapText="true" style="-fx-font-size: 14px; -fx-text-alignment: center;" />

    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="confirmarButton" text="Confirmar" style="-fx-background-color: #d9534f; -fx-text-fill: white;" />
        <Button fx:id="cancelarButton" text="Cancelar" style="-fx-background-color: #5bc0de; -fx-text-fill: white;" />
    </HBox>
</VBox>
