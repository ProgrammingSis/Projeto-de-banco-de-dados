<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="vetcare.gui.controllers.AdicionarVeterinarioController"
      spacing="10" alignment="CENTER">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Campo para o CRMV -->
    <Label text="CRMV:"/>
    <TextField fx:id="textCrmv" promptText="Digite o CRMV"/>

    <!-- Campo para o Nome -->
    <Label text="Nome:"/>
    <TextField fx:id="textNome" promptText="Digite o nome completo"/>

    <!-- Campo para a Especialidade -->
    <Label text="Especialidade:"/>
    <ComboBox fx:id="especialidade" promptText="Selecione a especialidade"/>

    <!-- Campo para o Contato (Email) -->
    <Label text="Contato (Email):"/>
    <TextField fx:id="textContato" promptText="Digite o email do veterinário"/>


    <!-- Botões Adicionar e Cancelar -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="salvarButton" text="Adicionar"/>
        <Button fx:id="cancelarButton" text="Cancelar"/>
    </HBox>

</VBox>