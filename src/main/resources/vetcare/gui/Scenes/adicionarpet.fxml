<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="vetcare.gui.controllers.AdicionarPetController"
      spacing="10" alignment="CENTER">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Campo para o Nome -->
    <Label text="Nome do Pet:"/>
    <TextField fx:id="textNome"/>

    <!-- Campo para a Raça -->
    <Label text="Raça:"/>
    <TextField fx:id="textRaca"/>

    <!-- Campo para o ID -->
    <Label text="ID do Pet:"/>
    <TextField fx:id="textId"/>

    <Label text="Espécie:"/>
    <ComboBox fx:id="comboEspeciePet"/>

    <!-- Botões Salvar e Cancelar -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="salvarButton" text="Salvar"/>
        <Button fx:id="cancelarButton" text="Cancelar"/>
    </HBox>
</VBox>